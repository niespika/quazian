generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String?
  role      Role
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  studentProfile   StudentProfile?
  classes          Class[]           @relation("ProfClasses")
  concepts         Concept[]         @relation("ProfConcepts")
  attempts         Attempt[]
  invitations      InvitationToken[]
  sessions         Session[]
  conceptMasteries ConceptMastery[]
  studentStats     StudentStats[]
  weeklyStats      StudentWeeklyStats[]
}

model Session {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model InvitationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
  usedAt    DateTime?
}

model StudentProfile {
  id      String @id @default(uuid())
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
  name    String
  class   Class  @relation(fields: [classId], references: [id])
  classId String
}

model Class {
  id     String @id @default(uuid())
  name   String
  prof   User   @relation("ProfClasses", fields: [profId], references: [id])
  profId String

  students StudentProfile[]
  quizzes  Quiz[]
  conceptAssignments ClassConcept[]
  studentStats StudentStats[]
  weeklyStats  StudentWeeklyStats[]
}

model Concept {
  id            String   @id @default(uuid())
  prof          User     @relation("ProfConcepts", fields: [profId], references: [id])
  profId        String
  subject       String
  title         String
  correctAnswer String
  distractors   String
  dateSeen      DateTime
  createdAt     DateTime @default(now())

  masteries ConceptMastery[]
  assignments ClassConcept[]
  quizQuestions QuizQuestion[]
}

model ClassConcept {
  id         String   @id @default(uuid())
  class      Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId    String
  concept    Concept  @relation(fields: [conceptId], references: [id], onDelete: Cascade)
  conceptId  String
  assignedAt DateTime @default(now())

  @@unique([classId, conceptId])
}

model ConceptMastery {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  concept   Concept  @relation(fields: [conceptId], references: [id], onDelete: Cascade)
  conceptId String
  pMastery  Float
  updatedAt DateTime @updatedAt

  @@unique([userId, conceptId])
}

model Quiz {
  id        String    @id @default(uuid())
  class     Class     @relation(fields: [classId], references: [id])
  classId   String
  weekKey   String
  slot      String
  createdAt DateTime  @default(now())
  attempts  Attempt[]
  questions QuizQuestion[]

  @@unique([classId, weekKey, slot])
}

model QuizQuestion {
  id              String @id @default(uuid())
  quiz            Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId          String
  concept         Concept @relation(fields: [conceptId], references: [id], onDelete: Cascade)
  conceptId       String
  order           Int
  subject         String
  title           String
  optionsJson     String
  correctIndex    Int
  optionSignature String

  @@index([optionSignature])
}

model Attempt {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  score     Float
  zScore    Float?
  noteOn20  Float?
  createdAt DateTime @default(now())

  @@unique([userId, quizId], name: "userId_quizId")
}

model StudentStats {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId     String
  zMean       Float
  noteOn20    Float
  updatedAt   DateTime @updatedAt

  @@unique([userId, classId])
}

model StudentWeeklyStats {
  id            String   @id @default(uuid())
  weekStart     DateTime
  class         Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId       String
  student       User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId     String
  attemptsCount Int
  meanScore     Float?
  zScore        Float?
  updatedAt     DateTime @updatedAt

  @@unique([weekStart, classId, studentId])
  @@index([classId, weekStart])
  @@index([studentId, weekStart])
}

enum Role {
  PROF
  STUDENT
}

enum UserStatus {
  INVITED
  ACTIVE
}
